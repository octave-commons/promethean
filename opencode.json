{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "perplexity-pro": {
      "npm": "@ai-sdk/perplexity-pro",
      "options": {
        "baseURL": "https://api.perplexity.ai/chat/completions",

        "aplKey": "{env:PERPLEXITY_API_KEY}"
      },
      "models": {
        "perplexity-pro/sonar-pro": {
          "name": "Dragonfly 1.5 Pro"
        }
      }
    },
    "ollama_openai": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama OpenAI Compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "error/qwen3:4b-instruct-100k": {
          "name": "Qwen3 4B Instruct"
        }
      }
    },
    "zai-coding-plan": {
      "models": {
        "glm-4.6": {
          "options": {
            "thinking": {
              "type": "enabled"
            }
          }
        },

        "glm-4.5": {
          "options": {
            "thinking": {
              "type": "enabled"
            }
          }
        },
        "glm-4.5v": {
          "options": {
            "thinking": {
              "type": "enabled"
            }
          }
        }
      }
    }
  },
  "permission": {
    "bash": {}
  },
  "mcp": {
    "clj": {
      "type": "local",
      "command": ["clojure", "-X:mcp-shadow-dual"],
      "enabled": true
    },
    "clj-kondo": {
      "type": "local",
      "command": ["npx", "clj-kondo-mcp"],
      "enabled": true
    }
  },
  "lsp": {
    "eslint-lsp": {
      "enabled": true,
      "command": ["npx", "eslint-lsp", "-y", "--stdio"],
      "extensions": [".ts", ".tsx", ".js", ".jsx", ".vue"]
    }
  },

  "instructions": ["./docs/agents/platforms/opencode/AGENTS.md"]
}
