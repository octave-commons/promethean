{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "perplexity-pro": {
      "npm": "@ai-sdk/perplexity-pro",
      "options": {
        "baseURL": "https://api.perplexity.ai/chat/completions",

        "aplKey": "{env:PERPLEXITY_API_KEY}"
      },
      "models": {
        "perplexity-pro/sonar-pro": {
          "name": "Dragonfly 1.5 Pro"
        }
      }
    },
    "opencode":{
      "models":{
      "big-pickle": {
        "options": {
          "reasoningEffort": "high"
        }
      }
    }

    },
    "zai-coding-plan": {
      "models": {
        "glm-4.6": {
          "options": {
            "thinking": {
              "type": "enabled"
            }
          }
        },

        "glm-4.5": {
          "options": {
            "thinking": {
              "type": "enabled"
            }
          }
        },
        "glm-4.5v": {
          "options": {
            "thinking": {
              "type": "enabled"
            }
          }
        }
      }
    }
  },
  "mcp": {
    "promethean-github":{
      "type":"remote",
      "url":"http://localhost:4320/github",
      "enabled": true
    },
    "clojure-centralized":{
      "type":"local",
      "command":["../mcp-server.sh", "unified", "7890"],
      "enabled": true,
      "description": "Centralized Clojure MCP server for all runtimes"
    },
    "clojure-promethean":{
      "type":"local",
      "command":["../mcp-server.sh", "jvm", "7891"],
      "enabled": true,
      "description": "Promethean JVM Clojure development MCP server"
    },
    "clojure-shadow":{
      "type":"local",
      "command":["../mcp-server.sh", "cljs", "7892"],
      "enabled": true,
      "description": "Promethean Shadow-CLJS development MCP server"
    },
    "clj-kondo": {
      "type": "local",
      "command": ["npx", "clj-kondo-mcp"],
      "enabled": true
    }
  },

  "instructions": ["./docs/agents/platforms/opencode/AGENTS.md"]
}
