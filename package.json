{
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "name": "promethean",
  "scripts": {
    "generate_mcp_configs": "bb ./mk/mcp-compile.clj ./config/mcp_servers.edn ~/.codex/config.toml ~/.config/mcp/config.json ~/.config/Code/User/mcp.json",
    "coverage": "c8 --all --reporter=text --reporter=lcov ava --config ./config/ava.config.mjs \"services/**/dist/**/*.test.js\" \"packages/**/dist/**/*.test.js\" \"shared/**/dist/**/*.test.js\" \"tests/**/*.js\"",
    "build:docs": "node scripts/generate-service-docs.js",
    "health:node-abi": "node -p \"process.versions.node + ' ABI ' + process.versions.modules\"",
    "prepare": "chmod +x ./bin/promethean.js",
    "lint": "biome lint --config-path=biome.json .",
    "format": "biome format --config-path=biome.json --write .",
    "lint:tasks": "tsx scripts/lint_tasks.ts",
    "changelog:check": "tsx scripts/check_changelog.ts",
    "changelog:check-fragments": "tsx scripts/check_changelog_fragments.ts",
    "doc:01-frontmatter": "tsx packages/docops/src/01-frontmatter.ts --dir docs/unique --gen-model qwen3:4b",
    "doc:02-embed": "tsx packages/docops/src/02-embed.ts --dir docs/unique",
    "doc:03-query": "tsx packages/docops/src/03-query.ts",
    "doc:04-relate": "tsx packages/docops/src/04-relations.ts --docs-dir docs/unique --doc-threshold 0.90 --ref-threshold 0.90",
    "doc:05-footers": "tsx packages/docops/src/05-footers.ts --dir docs/unique --anchor-style block",
    "doc:06-rename": "tsx packages/docops/src/06-rename.ts --dir docs/unique",
    "doc:all": "pnpm doc:01-frontmatter && pnpm doc:02-embed && pnpm doc:03-query && pnpm doc:04-relate && pnpm doc:05-footers && pnpm doc:06-rename",
    "script:lint-tasks": "tsx --tsconfig tsconfig.scripts.json scripts/lint_tasks.ts",
    "postinstall": "pnpm --filter @promethean/embedding^... run build && pnpm --filter @promethean/piper^... run build && pnpm --filter @promethean/piper run build",
    "generateBuildErrorReport": "pnpm -r --no-bail build | grep 'error' -i >|build-errors.txt",
    "check:flat": "node scripts/check-flat.js",
    "enforce:esm-ext": "eslint \"packages/**/src/**/*.{ts,tsx}\" --rule 'import/extensions: [2, \"always\", { ignorePackages: true }]'",
    "clean": "pnpm -r exec bash -lc 'rm -rf dist build coverage .turbo .cache .vite .parcel-cache .rollup.cache .ava .ava_cache .eslintcache *.tsbuildinfo playwright-report test-results || true' && rm -rf .turbo pnpm-debug.log*",
    "clean:changed": "pnpm -r --filter \"...[dev]\" exec bash -lc 'rm -rf dist build coverage .turbo .cache .vite .parcel-cache .rollup.cache .ava .ava_cache .eslintcache *.tsbuildinfo playwright-report test-results || true'",
    "clean:deep": "pnpm run clean && pnpm -r exec bash -lc 'rm -rf node_modules || true' && rm -rf node_modules && pnpm store prune",
    "dev:all": "node scripts/dev.mjs"
  },
  "bin": {
    "prom": "./bin/promethean.js"
  },
  "dependencies": {
    "@biomejs/biome": "^2.2.3",
    "@promethean/legacy": "workspace:*",
    "@promethean/piper": "workspace:*",
    "@promethean/utils": "workspace:*",
    "@promethean/image-link-generator": "workspace:*",
    "@types/node": "^24.3.1",
    "@xenova/transformers": "2.17.2",
    "adm-zip": "0.5.16",
    "ava": "^6.4.1",
    "c8": "^10.1.3",
    "dotenv": "17.2.1",
    "gray-matter": "^4.0.3",
    "http-proxy": "1.18.1",
    "jiti": "^2.5.1",
    "mongodb": "6.18.0",
    "playwright": "^1.55.0",
    "pm2": "6.0.8",
    "remark-parse": "^11.0.0",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "ws": "8.18.3",
    "yaml": "2.8.1",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@promethean/test-utils": "workspace:*",
    "@types/jest": "30.0.0",
    "@types/mongodb": "4.0.6",
    "@typescript-eslint/eslint-plugin": "8.42.0",
    "@typescript-eslint/parser": "8.42.0",
    "@typescript-eslint/type-utils": "8.42.0",
    "@typescript-eslint/utils": "8.42.0",
    "eslint": "9.33.0",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "30.0.5",
    "puppeteer": "24.16.0",
    "ts-jest": "29.4.1",
    "tsx": "4.20.3",
    "typescript": "5.4.5",
    "typescript-eslint": "8.42.0"
  },
  "license": "GPL-3.0-only",
  "volta": {
    "node": "20.19.4",
    "pnpm": "9.0.0"
  },
  "engines": {
    "node": "20.19.4"
  },
  "pnpm": {
    "overrides": {
      "fastify": "^5.0.0",
      "@fastify/static": "^8.2.0",
      "@fastify/websocket": "^11.2.0"
    }
  }
}
