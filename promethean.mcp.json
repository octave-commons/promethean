{
  "transport": "http",
  "includeHelp": true,
  "tools": [
    "mcp.help",
    "mcp.toolset",
    "mcp.endpoints",
    "mcp.validate-config",
    "github.request",
    "github.graphql",
    "github.rate-limit",
    "github.contents.write",
    "files.list-directory",
    "files.tree-directory",
    "files.view-file",
    "files.write-content",
    "files.write-lines",
    "files.search",
    "apply_patch",
    "tdd.scaffoldTest",
    "tdd.changedFiles",
    "tdd.runTests",
    "tdd.startWatch",
    "tdd.getWatchChanges",
    "tdd.stopWatch",
    "tdd.coverage",
    "tdd.propertyCheck",
    "tdd.mutationScore",
    "exec.list",
    "exec.run",
    "discord.send-message",
    "discord.list-messages",
    "pnpm.install",
    "pnpm.add",
    "pnpm.remove",
    "pnpm.runScript"
  ],
  "stdioMeta": {
    "title": "Default MCP Endpoint",
    "description": "Aggregated toolset available over stdio for local agents.",
    "workflow": [
      "mcp.toolset -> mcp.help",
      "mcp.validate-config",
      "files.search -> files.view-file -> apply_patch"
    ],
    "expectations": {
      "usage": [
        "Use mcp.toolset first to confirm endpoint scope",
        "Call mcp.validate-config after editing promethan.mcp.json",
        "Prefer files.write-lines for small edits"
      ],
      "pitfalls": [
        "mcp.validate-config reports warnings for missing metadata",
        "apply_patch expects unified diffs"
      ],
      "prerequisites": [
        "Ensure git workspace is clean before applying patches"
      ]
    }
  },
  "endpoints": {
    "process": {
      "includeHelp": true,
      "meta": {
        "title": "Task Runner",
        "description": "Inspect and control background task runner queues.",
        "workflow": [
          "process.getTaskRunnerConfig -> process.updateTaskRunnerConfig",
          "process.enqueueTask -> process.getQueue",
          "process.getStdout -> process.getStderr -> process.stop"
        ],
        "expectations": {
          "usage": [
            "Update configuration before enqueuing new tasks",
            "Stream stdout/stderr to monitor long jobs"
          ],
          "pitfalls": [
            "Stopping a task is irreversible"
          ]
        }
      },
      "tools": [
        "process.getTaskRunnerConfig",
        "process.updateTaskRunnerConfig",
        "process.enqueueTask",
        "process.stop",
        "process.getQueue",
        "process.getStdout",
        "process.getStderr"
      ]
    },
    "files": {
      "includeHelp": true,
      "meta": {
        "title": "Filesystem",
        "description": "Read, search, and edit files within the workspace sandbox.",
        "workflow": [
          "files.search -> files.view-file",
          "files.write-lines -> files.write-content",
          "apply_patch"
        ],
        "expectations": {
          "usage": [
            "Keep edits focused and explain context in changelog",
            "Prefer files.write-lines for incremental inserts"
          ],
          "pitfalls": [
            "Avoid binary writes",
            "Paths are repo-root relative"
          ]
        }
      },
      "tools": [
        "files.list-directory",
        "files.tree-directory",
        "files.view-file",
        "files.write-content",
        "files.write-lines",
        "files.search",
        "apply_patch"
      ]
    },
    "github": {
      "includeHelp": true,
      "meta": {
        "title": "GitHub REST",
        "description": "Interact with GitHub REST APIs.",
        "workflow": [
          "github.request -> github.rate-limit",
          "github.contents.write"
        ],
        "expectations": {
          "usage": [
            "Use github.request for most operations",
            "Inspect rate limits before high-volume calls"
          ],
          "pitfalls": [
            "github.contents.write overwrites files by default"
          ]
        }
      },
      "tools": [
        "github.request",
        "github.graphql",
        "github.rate-limit",
        "github.contents.write"
      ]
    },
    "exec": {
      "includeHelp": true,
      "meta": {
        "title": "Approved Exec",
        "description": "Run allowlisted shell commands from exec config.",
        "workflow": [
          "exec.list -> exec.run"
        ],
        "expectations": {
          "usage": [
            "Check exec.list before running unfamiliar commands"
          ],
          "pitfalls": [
            "exec.run rejects extra args unless allowlisted"
          ]
        }
      },
      "tools": [
        "exec.list",
        "exec.run"
      ]
    },
    "kanban": {
      "includeHelp": true,
      "meta": {
        "title": "Task Board",
        "description": "Query and update the Promethean kanban board.",
        "workflow": [
          "kanban.get-board -> kanban.get-column",
          "kanban.find-task -> kanban.update-status",
          "kanban.sync-board"
        ],
        "expectations": {
          "usage": [
            "Sync before editing to avoid stale data",
            "Always record final status with kanban.update-status"
          ],
          "pitfalls": [
            "kanban.move-task updates order and column"
          ]
        }
      },
      "tools": [
        "kanban.get-board",
        "kanban.get-column",
        "kanban.find-task",
        "kanban.find-task-by-title",
        "kanban.update-status",
        "kanban.move-task",
        "kanban.sync-board",
        "kanban.search"
      ]
    },
    "github/review": {
      "includeHelp": true,
      "meta": {
        "title": "GitHub Review",
        "description": "End-to-end tools for reviewing and shipping pull requests.",
        "workflow": [
          "github.review.getComments -> github.review.getReviewComments",
          "github.review.checkoutBranch -> github.review.push",
          "github.review.submitReview -> github.review.openPullRequest"
        ],
        "expectations": {
          "usage": [
            "Use github.review.requestChangesFromCodex for automated reviews",
            "Push after staging commits locally"
          ],
          "pitfalls": [
            "github.review.revertCommits is destructive"
          ]
        }
      },
      "tools": [
        "github.review.openPullRequest",
        "github.review.getComments",
        "github.review.getReviewComments",
        "github.review.submitComment",
        "github.review.submitReview",
        "github.review.getActionStatus",
        "github.review.commit",
        "github.review.push",
        "github.review.checkoutBranch",
        "github.review.createBranch",
        "github.review.revertCommits",
        "github.review.requestChangesFromCodex"
      ]
    },
    "discord": {
      "includeHelp": true,
      "meta": {
        "title": "Discord",
        "description": "Read and write messages in configured Discord channels.",
        "workflow": [
          "discord.list-messages -> discord.send-message"
        ],
        "expectations": {
          "usage": [
            "List recent messages before sending updates"
          ],
          "pitfalls": [
            "Use short updates to avoid rate limits"
          ]
        }
      },
      "tools": [
        "discord.send-message",
        "discord.list-messages"
      ]
    },
    "workspace": {
      "includeHelp": true,
      "meta": {
        "title": "Workspace Scripts",
        "description": "Manage dependencies and scripts via pnpm.",
        "workflow": [
          "pnpm.install",
          "pnpm.add -> pnpm.remove",
          "pnpm.runScript"
        ],
        "expectations": {
          "usage": [
            "Prefer pnpm.runScript for package scripts",
            "Filter commands when targeting a subset of packages"
          ],
          "pitfalls": [
            "pnpm.add requires explicit dependency list"
          ]
        }
      },
      "tools": [
        "pnpm.install",
        "pnpm.add",
        "pnpm.remove",
        "pnpm.runScript"
      ]
    }
  },
  "stdioProxyConfig": "./config/mcp_servers.edn"
}
