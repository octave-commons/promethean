  "stdioMeta": {
    "title": "Default MCP Endpoint",
    "description": "Aggregated toolset available over stdio for local agents.",
    "workflow": [
      "mcp_toolset -> mcp_help",
      "mcp_validate_config",
      "files_search -> files_view_file -> apply_patch"
    ],
    "expectations": {
      "usage": [
        "Use mcp_toolset first to confirm endpoint scope",
        "Call mcp_validate_config after editing promethan.mcp.json",
        "Prefer files_write_lines for small edits"
      ],
      "pitfalls": [
        "mcp_validate_config reports warnings for missing metadata",
        "apply_patch expects unified diffs"
      ],
      "prerequisites": ["Ensure git workspace is clean before applying patches"]
    }
  },
  "endpoints": {
    "discord": {
      "tools": ["discord_send_message", "discord_list_messages"],
      "includeHelp": true,
      "meta": {
        "title": "Discord",
        "description": "Read and write messages in configured Discord channels.",
        "workflow": ["discord_list_messages -> discord_send_message"],
        "expectations": {
          "usage": ["List recent messages before sending updates"],
          "pitfalls": ["Use short updates to avoid rate limits"]
        }
      }
    },
    "exec": {
      "tools": ["exec_list", "exec_run"],
      "includeHelp": true,
