{
  "$schema": "http://json-schema.org/schema",
  "title": "Package generator",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Package name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "preset": {
      "type": "string",
      "description": "Scaffold preset to apply when generating the package",
      "enum": ["ts-lib", "base", "web-frontend","fastify-service"],
      "default": "ts-lib"
    }
  },
  "required": ["name"]
}
