{
  "$schema": "http://json-schema.org/schema",
  "title": "Package generator",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Package name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "preset": {
      "type": "string",
      "description": "Optional template preset to scaffold specialized package layouts",
      "enum": ["fastify-service"],
      "default": null
    }
  },
  "required": ["name"]
}
