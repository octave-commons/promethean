{
  "$schema": "http://json-schema.org/schema",
  "title": "Package generator",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Package name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "preset": {
      "type": "string",
      "description": "Template preset to apply",
      "enum": ["base", "web-frontend"],
      "default": "base"
    }
  },
  "required": ["name"]
}
