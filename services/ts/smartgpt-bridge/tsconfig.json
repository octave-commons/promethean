{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "importHelpers": false,
        "newLine": "lf",
        "noEmitHelpers": true,
        "outDir": "dist",
        "baseUrl": ".",
        "removeComments": false,
        "sourceMap": true,
        "outDir": "dist",
        "lib": ["ES2022"],
        "types": ["node", "ava"]
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "./src/tests/fixtures/**/*.ts", "./src/tests/fixtures/broken.ts"]
}
