    "@types/ws": "^8.5.12",
    "ava": "^6.4.1",
    "c8": "^9.1.0",
    "@biomejs/biome": "^2.1.3",
    "rewrite-imports": "^3.0.0",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "5.7.3"
  },
  "ava": {
    "files": [
      "dist/tests/**/*.js"
    ]
