{
  "name": "@promethean/codex-context",
  "version": "0.1.0",
  "description": "OpenAI-compatible context service bridging Codex CLI to local LLMs with SmartGPT repo context.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && node scripts/patch-imports.js",
    "build:check": "tsc --noEmit --incremental false",
    "test": "pnpm run build && ava --config ../../../config/ava.config.mjs dist/tests",
    "coverage": "pnpm run build && c8 ava",
    "lint": "prettier --cache --check . && eslint src --cache",
    "format": "prettier --cache --write . && eslint src --fix --cache",
    "start": "pnpm run build && node --env-file=../../.env dist/index.js",
    "start:dev": "node --env-file=../../.env --loader ts-node/esm src/index.ts"
  },
  "dependencies": {
    "@types/body-parser": "^1.19.5",
    "body-parser": "^1.20.3",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "mkdirp": "^3.0.1",
    "node-fetch": "^3.3.2",
    "ollama": "^0.5.16"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.17.2",
    "@types/supertest": "^2.0.13",
    "ava": "^6.4.1",
    "c8": "^9.1.0",
    "eslint": "^8.57.0",
    "eslint-config-neon": "^0.1.62",
    "prettier": "^3.4.2",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "typescript": "5.7.3"
  },
  "ava": {
    "files": [
      "dist/tests/**/*.test.*"
    ],
    "timeout": "15s",
    "verbose": true,
    "nodeArguments": [
      "--enable-source-maps"
    ]
  }
}
