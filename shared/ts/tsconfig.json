{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": false,
    "newLine": "lf",
    "noEmitHelpers": true,
    "outDir": "dist",
    "baseUrl": ".",
    "removeComments": false,
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["ES2022"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["**/*.test.ts"]
}
