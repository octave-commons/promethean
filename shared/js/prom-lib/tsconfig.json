{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "lib": ["ES2022"]
  },
  "include": [
    "event/**/*.ts",
    "ds/**/*.ts",
    "worker/**/*.ts",
    "intention/**/*.ts",
    "snapshots/**/*.ts",
    "projectors/**/*.ts",
    "timetravel/**/*.ts",
    "dev/**/*.ts",
    "examples/**/*.ts",
    "http/**/*.ts",
    "ws/**/*.ts"
  ]
}
