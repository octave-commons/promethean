{
  "name": "@promethean-os/ecosystem-dsl",
  "version": "0.1.0",
  "description": "Clojure DSL for generating enhanced PM2 ecosystem configurations from simple EDN files",
  "main": "src/ecosystem_dsl/core.clj",
  "type": "module",
  "scripts": {
    "build": "clojure -M -m ecosystem-dsl.core",
    "test": "clojure -M:test",
    "lint": "clj-kondo --lint src",
    "typecheck": "clojure -M:check",
    "clean": "rm -rf target classes",
    "generate": "clojure -M -m ecosystem-dsl.script",
    "generate:watch": "clojure -M -m ecosystem-dsl.script --watch",
    "validate": "clojure -M -m ecosystem-dsl.script --validate-only"
  },
  "keywords": [
    "clojure",
    "dsl",
    "pm2",
    "ecosystem",
    "configuration",
    "enhancement",
    "monitoring"
  ],
  "author": "Promethean Team",
  "license": "GPL-3.0-only",
  "dependencies": {
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "clj-kondo": "^2023.10.0"
  },
  "peerDependencies": {
    "pm2": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/riatzukiza/promethean.git",
    "directory": "packages/ecosystem-dsl"
  },
  "bugs": {
    "url": "https://github.com/riatzukiza/promethean/issues"
  },
  "homepage": "https://github.com/riatzukiza/promethean/tree/main/packages/ecosystem-dsl",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
