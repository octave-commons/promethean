{
  "name": "@promethean/kanban-processor",
  "version": "0.1.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "prestart": "pnpm run build",
    "start": "node dist/index.js",
    "start:dev": "node --loader ts-node/esm src/index.ts",
    "build:check": "tsc --noEmit --incremental false",
    "test": "pnpm run build && ava --config ../../../config/ava.config.mjs",
    "coverage": "pnpm run build && c8 ava --config ../../../config/ava.config.mjs",
    "lint": "prettier --cache --check . && eslint . --cache || true",
    "format": "prettier --cache --write . && eslint . --fix --cache || true"
  },
  "dependencies": {
    "@promethean/ds": "workspace:*",
    "@promethean/fs": "workspace:*",
    "@promethean/legacy": "workspace:*",
    "@promethean/markdown": "workspace:*",
    "@promethean/persistence": "workspace:*",
    "mongodb": "^6.17.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "eslint": "^8.57.0",
    "eslint-config-neon": "^0.1.62",
    "prettier": "^3.4.2",
    "@promethean/pm2-helpers": "workspace:*"
  }
}
