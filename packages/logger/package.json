{
  "name": "@promethean-os/logger",
  "version": "0.1.0",
  "description": "Structured logging package for Promethean with Winston",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "ava",
    "test:unit": "ava src/tests/**/*.test.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "dev": "tsc --watch"
  },
  "keywords": [
    "logging",
    "winston",
    "structured",
    "promethean"
  ],
  "author": "Promethean Team",
  "license": "GPL-3.0-only",
  "dependencies": {
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "ava": "^6.0.0",
    "typescript": "^5.2.0"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.txt"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  }
}
