{
  "name": "@promethean-os/unified-indexer",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/*": "./dist/*",
    "./*": "./dist/*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:tests": "tsc -p tsconfig.test.json",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "pnpm run build:tests && ava --config ../../config/ava.config.mjs",
    "lint": "pnpm exec eslint .",
    "coverage": "pnpm run build && c8 ava --config ../../config/ava.config.mjs",
    "format": "pnpm exec prettier --write ."
  },
  "module": "dist/index.js",
  "dependencies": {
    "@promethean-os/persistence": "workspace:*",
    "@promethean-os/embedding": "workspace:*",
    "@promethean-os/legacy": "workspace:*",
    "@promethean-os/logger": "workspace:*",
    "@types/javascript-time-ago": "^2.5.0",
    "chromadb": "^3.0.14",
    "mongodb": "^6.18.0",
    "uuid": "^11.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0"
  }
}