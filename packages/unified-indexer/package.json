{
  "name": "@promethean-os/unified-indexer",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/*": "./dist/*",
    "./*": "./dist/*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:tests": "tsc -p tsconfig.test.json",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "pnpm run build:tests && ava --config ../../config/ava.config.mjs",
    "lint": "pnpm exec eslint .",
    "coverage": "pnpm run build && c8 ava --config ../../config/ava.config.mjs",
    "format": "pnpm exec prettier --write ."
  },
  "module": "dist/index.js",
  "dependencies": {
    "@promethean-os/persistence": "workspace:*"
  },
  "devDependencies": {
    "ava": "^6.1.3",
    "sinon": "^18.0.0",
    "@types/sinon": "^17.0.3",
    "c8": "^9.1.0"
  }
}
