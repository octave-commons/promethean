{
  "name": "@promethean-os/unified-indexer",
  "version": "0.1.0",
  "description": "Unified indexing service for files, OpenCode events, and Discord content",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "test": "pnpm build:tests && NODE_ENV=test ava",
    "test:watch": "pnpm build:tests --watch && NODE_ENV=test ava --watch",
    "build:tests": "tsc --project tsconfig.test.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "indexing",
    "search",
    "opencode",
    "discord",
    "files",
    "unified"
  ],
  "author": "Promethean OS",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@opencode-ai/sdk": "^1.0.0",
    "@promethean-os/persistence": "^0.1.0",
    "@promethean-os/fs": "^0.1.0",
    "@promethean-os/validation": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ava": "^6.0.0",
    "eslint": "^9.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/riatzukiza/promethean.git",
    "directory": "packages/unified-indexer"
  }
}
