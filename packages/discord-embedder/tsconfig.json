{
  "extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@shared/js/*": ["../../js/*"]
    },
    "allowArbitraryExtensions": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../embedding" },
    { "path": "../persistence" }
  ]
}
