{
  "name": "@promethean-os/agent-os-protocol",
  "version": "1.0.0",
  "description": "Agent OS Core Message Protocol - Unified messaging protocol for agent communication",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./security": {
      "import": "./dist/security/index.js",
      "types": "./dist/security/index.d.ts"
    },
    "./transport": {
      "import": "./dist/transport/index.js",
      "types": "./dist/transport/index.d.ts"
    },
    "./service-mesh": {
      "import": "./dist/service-mesh/index.js",
      "types": "./dist/service-mesh/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "ava",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "dev:watch": "tsc --watch"
  },
  "keywords": [
    "agent-os",
    "protocol",
    "messaging",
    "communication",
    "distributed-systems",
    "microservices",
    "typescript"
  ],
  "author": "Promethean OS",
  "license": "GPL-3.0-only",
  "dependencies": {
    "uuid": "^10.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "ava": "^5.3.1",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "ava": {
    "files": [
      "tests/**/*.test.ts"
    ],
    "typescript": {
      "compile": false,
      "rewritePaths": {
        "src/": "dist/"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/promethean-os/promethean.git",
    "directory": "packages/agent-os-protocol"
  },
  "bugs": {
    "url": "https://github.com/promethean-os/promethean/issues"
  },
  "homepage": "https://github.com/promethean-os/promethean/tree/main/packages/agent-os-protocol"
}
