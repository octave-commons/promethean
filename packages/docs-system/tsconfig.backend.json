{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/backend",
    "rootDir": "./src",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "types": ["node"],
    "noEmit": false,
    "composite": true
  },
  "include": ["src/backend/**/*", "src/shared/**/*"],
  "exclude": ["src/frontend/**/*", "**/*.test.ts", "**/*.spec.ts"]
}
