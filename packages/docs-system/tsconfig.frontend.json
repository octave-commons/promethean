{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/frontend",
    "rootDir": "./src/frontend",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "noEmit": false,
    "composite": true,
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/frontend/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "src/backend/**/*",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}