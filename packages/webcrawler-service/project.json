{
  "name": "@promethean/webcrawler-service",
  "root": "packages/webcrawler-service",
  "sourceRoot": "packages/webcrawler-service/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -b"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p tsconfig.json --noEmit"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "ava --config ../../config/ava.config.mjs \"dist/**/*.test.js\"",
        "cwd": "packages/webcrawler-service"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint ."
      }
    }
  },
  "tags": ["scope:packages"]
}
