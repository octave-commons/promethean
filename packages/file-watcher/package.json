{
  "name": "@promethean/file-watcher",
  "version": "0.1.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "prestart": "pnpm run build",
    "start": "node dist/index.js",
    "start:dev": "node --loader ts-node/esm src/index.ts",
    "build:check": "tsc --noEmit --incremental false -p tsconfig.json",
    "test": "pnpm run build && ava --config ../../../config/ava.config.mjs",
    "coverage": "pnpm run build && c8 ava --config ../../../config/ava.config.mjs",
    "lint": "prettier --cache --check . && eslint . --cache || true",
    "format": "prettier --cache --write . && eslint . --fix --cache || true"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "@promethean/persistence": "file:../persistence",
    "@promethean/embeddings": "file:../embeddings",
    "dotenv": "^17.2.1",
    "ws": "^8.18.3",
    "@promethean/legacy": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.17.2",
    "@types/ws": "^8.5.10",
    "ava": "^6.4.1",
    "c8": "^9.1.0",
    "eslint": "^8.57.0",
    "eslint-config-neon": "^0.1.62",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "5.7.3",
    "@promethean/test-utils": "file:../test-utils"
  }
}
