{
  "name": "@promethean-os/knowledge-graph",
  "version": "1.0.0",
  "description": "Knowledge graph system for analyzing development ecosystem relationships",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --format esm --splitting",
    "test": "bun test",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "db:migrate": "bun src/database/migrate.ts",
    "db:seed": "bun src/database/seed.ts",
    "cli": "bun src/cli.ts"
  },
  "keywords": [
    "knowledge-graph",
    "dependency-analysis",
    "documentation",
    "code-analysis"
  ],
  "author": "Promethean OS",
  "license": "MIT",
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "better-sqlite3": "^8.7.0",
    "cytoscape": "^3.26.0",
    "unified": "^11.0.4",
    "remark-parse": "^11.0.0",
    "remark-gfm": "^4.0.0",
    "gray-matter": "^4.0.3",
    "madge": "^6.1.0",
    "node-fetch": "^3.3.0",
    "cheerio": "^1.0.0-rc.12",
    "p-queue": "^7.3.0",
    "chokidar": "^3.5.3",
    "glob": "^10.3.0",
    "yaml": "^2.3.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/babel__parser": "^7.1.1",
    "@types/babel__traverse": "^7.20.2",
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "@types/cheerio": "^0.22.31",
    "bun-types": "latest",
    "eslint": "^8.50.0",
    "typescript": "^5.2.0",
    "@types/uuid": "^9.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./database": {
      "import": "./dist/database/index.js",
      "types": "./dist/database/index.d.ts"
    },
    "./processors": {
      "import": "./dist/processors/index.js",
      "types": "./dist/processors/index.d.ts"
    },
    "./visualization": {
      "import": "./dist/visualization/index.js",
      "types": "./dist/visualization/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}