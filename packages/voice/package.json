{
  "name": "@promethean/voice-service",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "cross-env TS_NODE_TRANSPILE_ONLY=1 ava --config ../../../config/ava.config.mjs tests/dummy.test.ts",
    "coverage": "cross-env TS_NODE_TRANSPILE_ONLY=1 c8 ava tests/dummy.test.ts",
    "lint": "pnpm exec @biomejs/biome lint . || true",
    "format": "pnpm exec @biomejs/biome format --write ."
  },
  "dependencies": {
    "@discordjs/opus": "^0.10.0",
    "@discordjs/voice": "^0.18.0",
    "discord.js": "^14.17.3",
    "express": "^4.19.2",
    "prism-media": "^1.3.5",
    "wav": "^1.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "cross-env": "^10.0.0",
    "@promethean/pm2-helpers": "workspace:*"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "tests/**/*.ts"
    ],
    "nodeArguments": [
      "--loader",
      "ts-node/esm"
    ]
  }
}
