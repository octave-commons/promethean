      "options": {},
      "configurations": {},
      "parallelism": true
    },
    "dev:watch": {
      "executor": "nx:run-script",
      "options": {
        "script": "dev:watch"
      },
      "configurations": {},
      "parallelism": true,
      "dependsOn": [
        "^build"
      ]
    }
