{
  "root": "packages/pantheon",
  "sourceRoot": "packages/pantheon",
  "name": "@promethean-os/pantheon",
  "projectType": "library",
  "tags": [
    "npm:public"
  ],
  "metadata": {
    "targetGroups": {
      "NPM Scripts": [
        "build",
        "clean",
        "dev",
        "typecheck",
        "test",
        "coverage",
        "coverage:check",
        "lint"
      ]
    },
    "description": "Pantheon Agent Management Framework â€” Complete framework with CLI, UI, and adapters"
  },
  "targets": {
    "build": {
      "executor": "nx:run-script",
      "options": {
        "script": "build"
      },
      "metadata": {
        "scriptContent": "tsc",
        "runCommand": "pnpm run build"
      },
      "configurations": {},
      "parallelism": true,
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "clean": {
      "executor": "nx:run-script",
      "options": {
        "script": "clean"
      },
      "metadata": {
        "scriptContent": "rm -rf dist",
        "runCommand": "pnpm run clean"
      },
      "configurations": {},
      "parallelism": true
    },
    "dev": {
      "executor": "nx:run-script",
      "options": {
        "script": "dev"
      },
      "metadata": {
        "scriptContent": "tsc --watch",
        "runCommand": "pnpm run dev"
      },
      "configurations": {},
      "parallelism": true
    },
    "typecheck": {
      "executor": "nx:run-script",
      "options": {
        "script": "typecheck"
      },
      "metadata": {
        "scriptContent": "tsc --noEmit",
        "runCommand": "pnpm run typecheck"
      },
      "configurations": {},
      "parallelism": true
    },
    "test": {
      "executor": "nx:run-script",
      "options": {
        "script": "test"
      },
      "metadata": {
        "scriptContent": "ava",
        "runCommand": "pnpm run test"
      },
      "configurations": {},
      "parallelism": true,
      "dependsOn": [
        "build"
      ]
    },
    "coverage": {
      "executor": "nx:run-script",
      "options": {
        "script": "coverage"
      },
      "metadata": {
        "scriptContent": "c8 --config ./c8.config.json ava",
        "runCommand": "pnpm run coverage"
      },
      "configurations": {},
      "parallelism": true,
      "dependsOn": [
        "test:unit",
        "test:integration",
        "test:e2e"
      ],
      "outputs": [
        "{projectRoot}/coverage"
      ]
    },
    "coverage:check": {
      "executor": "nx:run-script",
      "options": {
        "script": "coverage:check"
      },
      "metadata": {
        "scriptContent": "c8 --config ./c8.config.json --check-coverage ava",
        "runCommand": "pnpm run coverage:check"
      },
      "configurations": {},
      "parallelism": true
    },
    "lint": {
      "executor": "nx:run-script",
      "options": {
        "script": "lint",
        "forwardAllArgs": false
      },
      "metadata": {
        "scriptContent": "pnpm exec eslint .",
        "runCommand": "pnpm run lint"
      },
      "configurations": {},
      "parallelism": true
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": [
        "^nx-release-publish"
