{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/types.ts",
    "src/util.ts",
    "src/config.ts",
    "src/git.ts",
    "src/persistence/indexer.ts",
    "src/agent/router.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "src/hub.ts",
    "src/index.ts",
    "src/opencodeManager.ts"
  ]
}