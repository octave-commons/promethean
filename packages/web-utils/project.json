{
  "name": "@promethean/web-utils",
  "root": "packages/web-utils",
  "sourceRoot": "packages/web-utils/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -b"
      },
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p tsconfig.json --noEmit"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "build"
      ],
      "options": {
        "command": "ava",
        "env": {
          "AVA_PROJECT_ROOT": "."
        },
        "cwd": "{projectRoot}"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint ."
      }
    }
  },
  "tags": [
    "scope:packages"
  ]
}
