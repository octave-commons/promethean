{
  "name": "@promethean-os/nlp-command-parser",
  "version": "1.0.0",
  "description": "Natural language command parser for converting conversational input to structured commands",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:tests": "tsc -p tsconfig.test.json",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "pnpm run build:tests && ava",
    "lint": "pnpm exec eslint .",
    "coverage": "c8 ava",
    "format": "pnpm exec prettier --write ."
  },
  "keywords": [
    "nlp",
    "parser",
    "natural-language",
    "command-line",
    "cli",
    "kanban",
    "task-management"
  ],
  "author": "Promethean Team",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@promethean-os/kanban": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ava": "^6.0.0",
    "c8": "^9.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    },
    "./patterns": {
      "types": "./dist/patterns.d.ts",
      "import": "./dist/patterns.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ]
}
