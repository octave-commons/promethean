{
  "name": "@promethean/build-monitoring",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/*": "./dist/*",
    "./*": "./dist/*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "pnpm run build && ava --config ../../config/ava.config.mjs",
    "lint": "pnpm exec eslint .",
    "coverage": "pnpm run build && c8 ava --config ../../config/ava.config.mjs",
    "format": "pnpm exec prettier --write .",
    "monitor": "pnpm run build && node dist/cli.js monitor",
    "health-check": "pnpm run build && node dist/cli.js health-check",
    "setup-alerts": "pnpm run build && node dist/cli.js setup-alerts"
  },
  "module": "dist/index.js",
  "dependencies": {
    "@promethean/utils": "workspace:*",
    "zod": "^3.25.76",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.8",
    "systeminformation": "^5.23.5",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "cli-table3": "^0.6.4",
    "winston": "^3.12.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/express": "^4.17.21"
  }
}
