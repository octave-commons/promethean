{
    "name": "@promethean/platform",
    "root": "packages/platform",
    "sourceRoot": "packages/platform/src",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "tsc -b",
                "cwd": "packages/platform"
            },
            "outputs": ["{projectRoot}/dist"]
        },
        "typecheck": {
            "executor": "nx:run-commands",
            "options": {
                "command": "tsc -p tsconfig.json --noEmit",
                "cwd": "packages/platform"
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "ava",
                "cwd": "{projectRoot}",
                "env": {
                    "AVA_PROJECT_ROOT": "."
                }
            }
        },
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "eslint .",
                "cwd": "packages/platform"
            }
        }
    },
    "tags": ["scope:packages"]
}
