{
  "name": "@promethean/opencode-client",
  "version": "1.0.0",
  "description": "CLI client for OpenCode plugins and tools",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./plugins": {
      "import": "./dist/plugins/index.js",
      "require": "./dist/plugins/index.cjs"
    },
    "./plugins/*": {
      "import": "./dist/plugins/*.js",
      "require": "./dist/plugins/*.cjs"
    }
  },
  "bin": {
    "opencode-client": "dist/cli.js",
    "agent-cli": "dist/cli/AgentCLI.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "pnpm build && ava",
    "test:unit": "pnpm build && ava src/tests/**/*.test.ts",
    "test:watch": "ava --watch",
    "test:coverage": "c8 ava",
    "start": "node dist/cli.js"
  },
  "keywords": [
    "cli",
    "opencode",
    "llm",
    "queue"
  ],
  "author": "",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@opencode-ai/plugin": "^0.15.7",
    "@opencode-ai/sdk": "^0.15.7",
    "@promethean/ollama-queue": "workspace:*",
    "@promethean/persistence": "workspace:*",
    "@types/commander": "^2.12.5",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "ora": "^7.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.10",
    "@types/node": "^20.0.0",
    "@types/sinon": "^17.0.3",
    "ava": "^6.1.3",
    "c8": "^9.1.0",
    "sinon": "^18.0.0",
    "tsx": "^4.7.2"
  }
}
