{
  "name": "@promethean-os/build-config",
  "version": "1.0.0",
  "description": "Centralized build configurations for Promethean OS packages",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./typescript": {
      "types": "./dist/typescript/index.d.ts",
      "import": "./dist/typescript/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js"
    },
    "./linting": {
      "types": "./dist/linting/index.d.ts",
      "import": "./dist/linting/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "pnpm run build && ava --config ../../config/ava.config.mjs",
    "lint": "pnpm exec eslint .",
    "format": "pnpm exec prettier --write ."
  },
  "dependencies": {
    "typescript": "^5.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ava": "^6.0.0",
    "esmock": "^2.7.3",
    "rimraf": "^5.0.0"
  },
  "peerDependencies": {
    "ava": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/PrometheanAI/promethean.git",
    "directory": "packages/build-config"
  },
  "keywords": [
    "build",
    "configuration",
    "typescript",
    "testing",
    "linting",
    "promethean"
  ]
}
