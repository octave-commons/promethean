{
  "extends": "../../config/tsconfig.service.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@promethean/utils": ["../utils/dist/index"],
      "@promethean/utils/*": ["../utils/dist/*"],
      "@promethean/indexer-core": ["../indexer-core/dist/index"],
      "@promethean/indexer-core/*": ["../indexer-core/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
