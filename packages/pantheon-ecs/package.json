{
  "name": "@promethean-os/pantheon-ecs",
  "version": "0.2.0",
  "description": "Entity Component System for Pantheon framework",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/*": "./dist/*",
    "./*": "./dist/*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --out-dir dist && tsc -p tsconfig.json --emitDeclarationOnly --declaration",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "typecheck": "tsc -p tsconfig.json",
    "test": "pnpm run build && ava",
    "lint": "pnpm exec eslint .",
    "coverage": "pnpm run build && c8 ava",
    "format": "pnpm exec prettier --write ."
  },
  "keywords": [
    "ecs",
    "entity",
    "component",
    "system",
    "pantheon"
  ],
  "author": "Promethean Framework",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@promethean-os/utils": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ava": "^6.0.0",
    "c8": "^8.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
