{
  "name": "@promethean/generator",
  "version": "1.0.0",
  "description": "Package generator for Promethean Framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pkg-gen": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "test": "ava",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "coverage": "nyc ava",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^8.2.6",
    "chalk": "^4.1.2",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "ava": "^6.1.1",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.4.5",
    "tsx": "^4.7.0"
  },
  "ava": {
    "files": [
      "test/**/*.test.ts"
    ],
    "nodeArguments": [
      "--loader=tsx"
    ]
  },
  "license": "MIT"
}
