{
  "name": "@promethean/buildfix",
  "root": "packages/buildfix",
  "sourceRoot": "packages/buildfix/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -b",
        "cwd": "packages/buildfix"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p tsconfig.json --noEmit",
        "cwd": "packages/buildfix"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "ava",
        "cwd": "{projectRoot}",
        "env": {
          "AVA_PROJECT_ROOT": "."
        }
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint .",
        "cwd": "packages/buildfix"
      }
    }
  },
  "tags": ["scope:packages"],
  "pipelines": "pipelines.json"
}
