{
  "name": "@promethean/kanban",
  "version": "0.2.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js"
    },
    "./board/config": {
      "types": "./dist/board/config.d.ts",
      "import": "./dist/board/config.js"
    },
    "./lib/kanban": {
      "types": "./dist/lib/kanban.d.ts",
      "import": "./dist/lib/kanban.js"
    },
    "./lib/types": {
      "types": "./dist/lib/types.d.ts",
      "import": "./dist/lib/types.js"
    }
  },
  "bin": {
    "kanban": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -b tsconfig.json --force",
    "build:docs": "typedoc --options typedoc.json",
    "prepack": "pnpm run build",
    "test": "pnpm run build && ava"
  },
  "dependencies": {
    "@promethean/markdown": "workspace:*",
    "@promethean/utils": "workspace:*",
    "globby": "^14.0.2",
    "chokidar": "^4.0.1",
    "gray-matter": "^4.0.3",
    "mongodb": "^6.18.0",
    "simple-git": "^3.27.0",
    "ws": "^8.18.0",
    "yaml": "^2.5.0"
  },
  "devDependencies": {
    "@microsoft/tsdoc": "^0.15.1",
    "@types/node": "24.3.1",
    "@types/ws": "^8.5.0",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.9.0",
    "esmock": "^2.7.3",
    "typescript": "^5.4.0"
  }
}
