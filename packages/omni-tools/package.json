{
  "name": "@promethean-os/omni-tools",
  "version": "1.0.0",
  "description": "Unified AI configuration management and service adapters for the Promethean ecosystem",
  "license": "GPL-3.0-only",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.js"
    }
  },
  "bin": {
    "omni": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "ava",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "clojure:build": "clojure -M:build",
    "clojure:test": "clojure -M:test",
    "clojure:clean": "clojure -M:clean"
  },
  "dependencies": {
    "@promethean-os/mcp": "workspace:*",
    "@promethean-os/kanban": "workspace:*",
    "@promethean-os/logger": "workspace:*",
    "fastify": "^5.0.0",
    "zod": "^3.23.8",
    "commander": "^12.0.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ava": "^6.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      }
    }
  },
  "files": [
    "dist/",
    "clojure/",
    "README.md",
    "LICENSE.txt"
  ],
  "keywords": [
    "ai",
    "configuration",
    "mcp",
    "promethean",
    "adapters",
    "synchronization"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/PrometheanAI/promethean.git",
    "directory": "packages/omni-tools"
  },
  "bugs": {
    "url": "https://github.com/PrometheanAI/promethean/issues"
  },
  "homepage": "https://github.com/PrometheanAI/promethean/tree/main/packages/omni-tools"
}
