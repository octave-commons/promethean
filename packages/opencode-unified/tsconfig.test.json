{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": [
    "src/typescript/**/*",
    "src/schemas/**/*",
    "src/tests/**/*.test.ts",
    "tests/**/*.test.ts"
  ],
  "exclude": ["node_modules", "dist", "src/clojurescript", "**/*.spec.ts"],
  "ts-node": {
    "require": ["tsx/cjs"]
  }
}
