{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/typescript/**/*", "src/schemas/**/*", "src/tests/**/*.test.ts"],
  "exclude": ["node_modules", "dist", "src/clojurescript", "**/*.spec.ts"]
}
