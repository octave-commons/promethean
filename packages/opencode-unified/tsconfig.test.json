{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "src/typescript/**/*",
    "src/schemas/**/*",
    "src/tests/**/*.test.ts",
    "tests/**/*.test.ts"
  ],
  "exclude": ["node_modules", "dist", "src/clojurescript", "**/*.spec.ts"]
}
