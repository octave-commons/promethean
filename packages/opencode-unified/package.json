{
  "name": "@promethean/opencode-unified",
  "version": "1.0.0",
  "description": "Unified OpenCode client combining TypeScript server, ClojureScript editor, and Electron integration",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "require": "./dist/client/index.cjs"
    },
    "./electron": {
      "types": "./dist/electron/index.d.ts",
      "import": "./dist/electron/index.js",
      "require": "./dist/electron/index.cjs"
    },
    "./plugins": {
      "import": "./dist/plugins/index.js",
      "require": "./dist/plugins/index.cjs"
    },
    "./plugins/*": {
      "import": "./dist/plugins/*.js",
      "require": "./dist/plugins/*.cjs"
    },
    "./dist/*": "./dist/*",
    "./*": "./dist/*"
  },
  "bin": {
    "opencode-unified": "dist/cli.js",
    "opencode-server": "dist/server/cli.js",
    "opencode-client": "dist/client/cli.js"
  },
  "files": [
    "dist",
    "static",
    "electron-builder.json"
  ],
  "scripts": {
    "build": "pnpm build:typescript",
    "build:typescript": "tsc",
    "build:tests": "tsc -p tsconfig.test.json",
    "build:clojurescript": "shadow-cljs release app",
    "build:full": "pnpm build:typescript && pnpm build:clojurescript",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:clojurescript": "shadow-cljs check",
    "test": "pnpm build:typescript && npx ava --require tsx/cjs src/tests/validation.test.ts src/tests/basic.test.ts",
    "test:unit": "pnpm build:typescript && ava dist/tests/**/*.test.js",
    "test:integration": "pnpm build:typescript && ava dist/tests/integration/**/*.test.js",
    "test:e2e": "pnpm build:typescript && ava dist/tests/e2e/**/*.test.js",
    "test:watch": "ava --watch",
    "test:coverage": "c8 ava",
    "lint": "pnpm exec eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "pnpm exec eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "pnpm exec prettier --write .",
    "dev": "run-p dev:typescript dev:clojurescript",
    "dev:typescript": "tsc --watch",
    "dev:clojurescript": "shadow-cljs watch app renderer preload main",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev:server": "node dist/typescript/server/index.js",
    "start": "pnpm build && node dist/server/index.js",
    "start:electron": "pnpm build && electron .",
    "electron:pack": "pnpm build && electron-builder --dir",
    "electron:dist": "pnpm build && electron-builder",
    "web-ui": "node src/typescript/server/web-ui/server.js"
  },
  "keywords": [
    "opencode",
    "electron",
    "clojurescript",
    "typescript",
    "llm",
    "agent",
    "cli",
    "server",
    "editor"
  ],
  "author": "Promethean Team",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@opencode-ai/plugin": "^0.15.7",
    "@opencode-ai/sdk": "^0.15.7",
    "@promethean/security": "workspace:*",
    "@promethean/ollama-queue": "workspace:*",
    "@promethean/persistence": "workspace:*",
    "fastify": "^5.0.0",
    "@fastify/cors": "^10.0.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/bearer-auth": "^9.4.0",
    "zod": "^3.25.76",
    "dotenv": "^17.2.1",
    "@types/commander": "^2.12.5",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "ora": "^7.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "scheduler": "^0.27.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.10",
    "@types/node": "^20.0.0",
    "@types/sinon": "^17.0.3",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/jsonwebtoken": "^9.0.6",
    "ava": "^6.1.3",
    "c8": "^9.1.0",
    "sinon": "^18.0.0",
    "tsx": "^4.7.2",
    "chokidar": "^3.6.0",
    "cross-env": "^7.0.3",
    "electron": "^32.2.0",
    "electron-builder": "^24.13.3",
    "npm-run-all": "^4.1.5",
    "shadow-cljs": "^2.28.23",
    "rimraf": "^5.0.5",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "build": {
    "appId": "ai.promethean.opencode-unified",
    "productName": "Promethean OpenCode",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "static/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "static",
        "to": "static"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development"
    }
  },
  "workspaces": {
    "packages": [
      "src/typescript/*",
      "src/clojurescript/*"
    ]
  }
}
