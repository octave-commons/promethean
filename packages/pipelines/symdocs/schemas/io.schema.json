{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Input/output schema for symdocs pipeline operations",
  "properties": {
    "files": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of files to process"
    },
    "symbols": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "kind": { "type": "string" },
          "file": { "type": "string" },
          "line": { "type": "number" },
          "signature": { "type": "string" }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "generatedAt": { "type": "string" },
        "version": { "type": "string" }
      }
    }
  },
  "additionalProperties": true
}