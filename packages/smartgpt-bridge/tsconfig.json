{
  "extends": "../../config/tsconfig.service.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@shared/js/*": ["../../js/*"],
      "@promethean/persistence": ["../persistence/dist/index"],
      "@promethean/persistence/*": ["../persistence/dist/*"],
      "@promethean/fs": ["../fs/dist/index"],
      "@promethean/fs/*": ["../fs/dist/*"],
      "@promethean/embedding": ["../embedding/dist/index"],
      "@promethean/embedding/*": ["../embedding/dist/*"]
    },
    "composite": true,
    "declaration": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "./src/tests/**/*.ts",
    "./src/utils/scripts/**/*.ts",
    "./src/tests/fixtures/**/*.ts",
    "./src/tests/fixtures/broken.ts"
  ]
}
