{
  "name": "@promethean/platform-core",
  "version": "0.1.0",
  "description": "Core infrastructure for cross-platform compatibility layer",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "license": "GPL-3.0-only",
  "scripts": {
    "build": "tsc",
    "test": "ava",
    "test:unit": "ava src/tests/**/*.test.ts",
    "test:integration": "ava tests/integration/**/*.test.ts",
    "clean": "rm -rf dist",
    "coverage": "nyc ava",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "dev": "tsc --watch"
