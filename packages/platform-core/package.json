  "dependencies": {
    "@promethean/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ava": "^6.0.0",
    "nyc": "^15.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "cross-platform",
    "platform-detection",
    "runtime",
    "compatibility",
    "typescript"
  ],
  "author": "Promethean Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/promethean/promethean.git",
    "directory": "packages/platform-core"
  },
  "bugs": {
    "url": "https://github.com/promethean/promethean/issues"
