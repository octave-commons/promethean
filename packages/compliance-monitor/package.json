{
  "name": "@promethean/compliance-monitor",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "prestart": "pnpm run build",
    "start": "node dist/src/index.js",
    "start:dev": "node --loader ts-node/esm src/index.ts",
    "build:check": "tsc --noEmit --incremental false",
    "lint": "prettier --cache --check . && eslint . --cache || true",
    "format": "prettier --cache --write . && eslint . --fix --cache || true",
    "test": "pnpm run test:unit",
    "test:unit": "pnpm run build && pnpm exec ava",
    "test:integration": "node -e \"console.log('no integration tests for compliance-monitor')\"",
    "test:e2e": "node -e \"console.log('no e2e tests for compliance-monitor')\""
  },
  "dependencies": {
    "@fastify/rate-limit": "^10.3.0",
    "fastify": "^5.3.2",
    "jose": "^5.9.6",
    "@promethean/persistence": "workspace:*",
    "@promethean/legacy": "workspace:*",
    "mongodb": "^6.8.0",
    "ws": "^8.18.0",
    "node-cron": "^3.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@promethean/pm2-helpers": "workspace:*",
    "@promethean/test-utils": "workspace:*",
    "ava": "^6.4.1",
    "c8": "^9.1.0",
    "mongodb-memory-server": "^10.1.4",
    "typescript": "^5.5.4"
  },
  "ava": {
    "extensions": {
      "ts": true
    },
    "files": [
      "src/tests/**/*.test.ts"
    ],
    "nodeArguments": [
      "--loader",
      "ts-node/esm"
    ]
  }
}
