{
    "name": "ts-metrics",
    "root": "packages/metrics",
    "sourceRoot": "packages/metrics/src",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "tsc -b",
                "cwd": "packages/metrics"
            },
            "outputs": ["{projectRoot}/dist"]
        },
        "typecheck": {
            "executor": "nx:run-commands",
            "options": {
                "command": "tsc -p tsconfig.json --noEmit",
                "cwd": "packages/metrics"
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "ava",
                "cwd": "packages/metrics"
            }
        },
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "eslint .",
                "cwd": "packages/metrics"
            }
        }
    },
    "tags": ["scope:packages"]
}
